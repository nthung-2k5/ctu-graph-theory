{
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnPaste": true, // optional
        "editor.formatOnSave": true, // optional
        "editor.formatOnSaveMode": "file", // required to format on save
    },
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    }
}